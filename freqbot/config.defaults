# но не чаще, чем раз в 36000 секунд (10 часов)
# установите RESTART_INTERVAL = 0, если хотите отключить это
RESTART_CMD = '/usr/bin/python /opt/freqbot/start.py /opt/freqbot/freqbot.conf'
KEEP_ALIVE_INTERVAL = 60
SH_LANG = 'C.UTF-8'

### MISC ###
PIDFILE = '/tmp/freqbot.pid'
ENABLE_SQLITE = True

