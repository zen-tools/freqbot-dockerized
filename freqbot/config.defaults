### ACCOUNT ###
SERVER = u'kreved.org'
USER = u'freqbot'
PASSWD = u'secret'
RESOURCE = u'Python'
PORT = 5222
USE_SSL = False
CONNECT_SERVER = None
#CONNECT_SERVER = u'localhost'

### ACCESS ###
ADMINS = []

### MUC ###
NICK = u'freQ-bot'
STATUS = u'freQ-bot %VERSION% is online'
SHOW = u''
