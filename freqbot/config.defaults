MSGLIMIT = 400
TRUSTED_SERVERS = []
#TRUSTED_SERVERS = [u'conference.jabber.ru', u'conference.jabber.org']

### BOT ###
SHARE_OS = True
LANG = 'ru'
DATADIR = '/var/freqbot'
DBDIR = None
USE_THREADS = True
REWRITE_POWER = 7
#QUEUE_SEND_INTERVAL = 1.5
#QUEUE_LIMIT = 16
CMD_LIMIT = 7
RESTART_INTERVAL = 36000
